@using System.Security.Claims
@model List<UserDocument>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
   
   <a asp-controller="Document" asp-action="Index">Create Document</a>

    @if (Model != null)
    {
           <div>
       <p>documents</p>

       @foreach (var doc in Model)
       {
