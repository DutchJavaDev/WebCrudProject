               <p>@doc.DocumentTitle</p>
               <a asp-controller="Document" asp-action="Edit">Edit</a>
               <a asp-controller="Document" asp-action="Delete">Delete</a>
           </div>
       }
       </div>
    }


    @if (Context.User.Identity.IsAuthenticated)
    {
        var user = (ClaimsIdentity)Context.User.Identity;

