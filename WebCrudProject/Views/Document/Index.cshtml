@model UserDocument

<div class="text-center">
    <form asp-controller="Document" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        @Html.TextBoxFor(m => m.DocumentTitle, new { required="required" })
        <br />
        <input name="DocumentCreateDate" type="date" required />
        <br />
        @Html.PasswordFor(m => m.DocumentPassword, new { required = "required" })
        <br />
        @Html.HiddenFor(m => m.DocumentNumber)
        <br />
        @Html.TextAreaFor(m => m.DocumentDescription, new { required = "required" })

        <input type="submit" value="Create" />
    </form>
</div>